         <!-- Search form -->
            <form onsubmit="event.preventDefault(); searchForum(this.query.value);">
                <input type="text" name="query" placeholder="Enter keywords">
                <button type="submit">Search</button>
            </form>
        </section>
        <!-- Discussion categories with pagination -->
        <section id="category1">
            <h2>Category 1</h2>
            <!-- Discussion threads -->
            <div class="discussion-thread">
                <h3>Discussion Thread 1</h3>
                <!-- Like and dislike buttons -->
                <button onclick="likeThread('thread1')">Like</button>
                <button onclick="dislikeThread('thread1')">Dislike</button>
                <p>Post content goes here...</p>
                
                <!-- Comment form -->
                <form action="#" method="post" class="comment-form">
                    <textarea name="comment" id="comment" cols="30" rows="5" placeholder="Write a comment"></textarea>
                    <button type="button" onclick="postComment('thread1', this.form.comment.value)">Post Comment</button>
                </form>
                
                <!-- Comments -->
                <div class="comments">
                    <!-- Individual comments will be displayed here -->
                </div>
            </div>
            <!-- Pagination links -->
            <div class="pagination">
                <a href="#">Previous</a>
                <a href="#">1</a>
                <a href="#">2</a>
                <a href="#">Next</a>
            </div>
        </section>
        <!-- User interactions -->
        <section id="user-interactions">
            <h2>User Interactions</h2>
            <!-- Like button -->
            <button onclick="likePost('post1')">Like</button>
            <!-- Upvote/Downvote buttons -->
            <button onclick="upvotePost('post1')">Upvote</button>
            <button onclick="downvotePost('post1')">Downvote</button>
            <!-- User mention -->
            <input type="text" id="mention" placeholder="Mention user">
            <button onclick="mentionUser('user1')">Mention</button>
        </section>
        <!-- Notifications -->
        <section id="notifications">
            <h2>Notifications</h2>
            <!-- Notification settings -->
            <label for="emailNotifications">Email Notifications:</label>
            <input type="checkbox" id="emailNotifications" name="emailNotifications">
            <label for="browserNotifications">Browser Notifications:</label>
            <input type="checkbox" id="browserNotifications" name="browserNotifications">
        </section>
        <!-- File upload button -->
        <section id="file-upload">
            <h2>File Upload</h2>
            <form action="#" method="post" enctype="multipart/form-data">
                <input type="file" name="file" id="file">
                <button type="submit ">Upload File</button>
            </form>
        </section>
    </main>
    <!-- Footer section -->
    <footer>
        <p>&copy; 2024 Forum. All rights reserved.</p>
    </footer>
    <!-- Include Quill.js library -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</body>
</html>
```
